
.searchContainer{
  padding: 0 20rpx;
}
.header{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}

.header .searhInput{
  position: relative;
  flex: 1;
  background-color: rgba(237, 237, 237, 0.3);
  border-radius: 30rpx;
}

.cancel{
  width: 100rpx;
  text-align: center;
}

.searchIcon{
  position: absolute;
  left: 15rpx;
}

.searhInput input{
  margin-left: 50rpx;
  height: 60rpx;
}

.placeholder{
  font-size: 28rpx;
}

/* 热搜榜 */
.hotContainer .title{
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom:1rpx solid #eee ;
}
.hotContainer .hotList{
  display: flex;
  flex-wrap: wrap;
}

.hotItem{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}

.hotItem .order{
  margin: 0 10rpx;
}

.hotItem .iconImg{
  position: relative;
  top: 8rpx;
  height: 35rpx;
  width: 20rpx;
  margin-left: 10rpx;
  padding-top: 20rpx;
}
