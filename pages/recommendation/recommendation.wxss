
.recmmendSongContainer .header{
  position: relative;
  width: 100%;
  height: 300rpx;
} 
.recmmendSongContainer .header image{
  height: 100%;
  width: 100%;
}
.header .date{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -150rpx;
  margin-top: -50rpx;
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}

.header .day{
  font-size: 36rpx;
}

/* 列表 */
.listContainer{
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background-color: #fff;
}
.listContainer .listHeader {
  height: 80rpx;
  line-height: 80rpx;
}
.listContainer .listHeader .changMore{
  float: right;
}

/* 内容 */
.listScroll{
  height: calc(100vh - 380rpx);
}
.scrollItem{
  position: relative;
  display: flex;
  padding: 20rpx 0;
}
.scrollItem image{
  height: 80rpx;
  width: 80rpx;
  border-radius: 8rpx;
}
.musicInfo{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  width: 400rpx;
 
}
.musicInfo text{
  height: 40rpx;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.scrollItem .iconfont{
  position: absolute;
  right: 0;
  height: 80rpx;
  width: 80rpx;
  line-height: 80rpx;
  text-align: right;
}



