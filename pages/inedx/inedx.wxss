/* 轮播图 */
.banners{
  width: 100%;
  height: 300rpx;
}

.banners image{
  height: 100%;
  width: 100%;
}

/* 导航 */
.navdiv{
  display: flex;
}

.nav_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.nav_item .iconfont{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  font-size: 50rpx;
  text-align: center;
  line-height: 100rpx;
  background: rgb(240,19,19);
  color: #fff;
  margin: 20rpx 0;
}

.nav_item text{
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommend{
  padding: 20rpx;
}

/* 推荐内容 */
.recommend_scroll{
  display: flex;
  height: 300rpx;
}

.scroll_item{
  width: 200rpx;
  margin-right: 20rpx;
}

.scroll_item image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scroll_item  text{
  font-size: 26rpx;
   /* 多行文本溢出隐藏 省略号代替 */
   overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 2;
}

/* 排行榜 */
.top_list{
  padding: 20rpx;
}

.top_swiper{
  height: 400rpx;
}

.swiper_item{
  width: 96%;
  background-color: #fbfbfb;
}

.swiper_item .title{
  font-size: 30rpx;
  line-height: 80rpx;
}

.music_item{
  display: flex;
  margin-bottom: 20rpx;
}

.music_item image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 6rpx;
}

.music_item .count{
  height: 100rpx;
  width: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.music_item .music_name{
  height: 100rpx;
  width: 100rpx;
  line-height: 100rpx;
  
}